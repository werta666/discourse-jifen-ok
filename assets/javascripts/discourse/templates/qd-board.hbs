<div class="qd-page">
  <div class="qd-container">
    <div class="qd-card qd-board qd-board--neo">
      <div class="board-header">
        <h1 class="qd-title">🏆 积分排行榜</h1>
        <p class="qd-subtitle">前五名荣耀展示</p>
      </div>

      <div class="board-stage">
        {{#if this.secondUser}}
          <div class="podium podium--second">
            <div class={{this.medalClass this.secondUser.rank}}>
              {{this.secondUser.rank}}
            </div>
            <div class="podium-meta">
              <div class="board-name">@{{this.secondUser.username}}</div>
              <div class="board-points">+{{this.secondUser.points}} 分</div>
            </div>
            <div class="podium-foot podium-foot--second"></div>
          </div>
        {{/if}}

        {{#if this.firstUser}}
          <div class="podium podium--first">
            <div class={{this.medalClass this.firstUser.rank}}>
              {{this.firstUser.rank}}
            </div>
            <div class="podium-meta">
              <div class="board-name">@{{this.firstUser.username}}</div>
              <div class="board-points">+{{this.firstUser.points}} 分</div>
            </div>
            <div class="podium-foot podium-foot--first"></div>
          </div>
        {{/if}}

        {{#if this.thirdUser}}
          <div class="podium podium--third">
            <div class={{this.medalClass this.thirdUser.rank}}>
              {{this.thirdUser.rank}}
            </div>
            <div class="podium-meta">
              <div class="board-name">@{{this.thirdUser.username}}</div>
              <div class="board-points">+{{this.thirdUser.points}} 分</div>
            </div>
            <div class="podium-foot podium-foot--third"></div>
          </div>
        {{/if}}
      </div>

      <div class="board-list">
        {{#each this.restList as |u|}}
          <div class="board-item">
            <div class="board-rank">#{{u.rank}}</div>
            <div class="board-user">@{{u.username}}</div>
            <div class="board-score">+{{u.points}} 分</div>
          </div>
        {{/each}}
      </div>

      <div class="board-footer">
        <button class="btn btn-default" {{on "click" this.refreshBoard}} disabled={{this.isLoading}}>
          {{if this.isLoading "刷新中..." "刷新"}}
        </button>
        <div class="board-updated">更新于：{{this.model.updatedAt}}</div>
      </div>
    </div>
  </div>
</div>